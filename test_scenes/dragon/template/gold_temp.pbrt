#Integrator "path" "integer maxdepth" [4]
Integrator "path" "integer maxdepth" [DEPTH]

Sampler "halton" "integer pixelsamples" [SAMPLES]

PixelFilter "gaussian"

Film "image" "integer xresolution" [300] "integer yresolution" [300]
    "string filename" "dragon_gold_d_DEPTH_ms_MS_a_ALPHA.png"

LookAt 277 -240 250  0 60 -30 0 0 1
Camera "perspective" "float fov" [33]

WorldBegin

AttributeBegin
Rotate 90 0 0 1
Rotate -90 1 0 0
LightSource "infinite" "string mapname"
    "textures/20060807_wells6_hd.exr"   "color scale" [2.5 2.5 2.5]
AttributeEnd

AttributeBegin
#Material "matte" "color Kd" [.7 .7 .7]
#Material "mirror" "color Kr" [ .7 .7 .7 ]
#Texture "lines" "color" "imagemap" "string filename" "textures/lines.exr"
Material "matte"
 "color Kd" [.3 .3 .3]
#  "texture Kd" "lines"
Translate 0 0 -40
Shape "trianglemesh"
   "point P" [ -1000 -1000 0   1000 -1000 0   1000 1000 0 -1000 1000 0 ]
    "integer indices" [ 0 1 2 2 3 0]
AttributeEnd

    
#Texture "tmap" "color" "imagemap" "string filename" ["textures/ganesha.png"]
MakeNamedMaterial "Gold"
        "string type" [ "metal" ]
        "spectrum eta" "spds/Au.eta.spd"
        "spectrum k" "spds/Au.k.spd"
        "float roughness" ALPHA 
        "string modelPrefix" "NVPMODELPREFIX/aALPHA/h_HIDDENNVP_bj_4"
        "string fresnelPrefix" "FRESNELMODELPREFIX/aALPHA/h_HIDDENFRESNEL"
        "bool multiscatter" ["USEMS"]
        "bool remaproughness" ["false"]
        "bool usenvp" "USENVP"
        "bool useBeckman" ["true"]
        #"integer maxBounce" 5
        #"integer minBounce" 1
        #"bool uniform" ["false"]
        #"bool vcavity" ["true"]

AttributeBegin
NamedMaterial "Gold"
Rotate -53 0 1 0
Shape "plymesh" "string filename" "geometry/dragon_remeshed.ply"
AttributeEnd

WorldEnd
