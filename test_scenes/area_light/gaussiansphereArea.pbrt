Film "image" 
	"integer xresolution" [900] "integer yresolution" [900]
    "string filename" "gaussiansphereArea.png"
Integrator "path" "integer maxdepth" [1]
Sampler "halton" "integer pixelsamples" [16] 

LookAt 0 3 8  0 .8 0   0 1 0
Camera "perspective" "float fov" [22]

WorldBegin


AttributeBegin
Material "matte" "color Kd" [1 1 1]
AreaLightSource "diffuse"  "color L" [500 500 500]
Translate -10 10 -4
Shape "disk" "float radius" [1]
ReverseOrientation
AttributeEnd

AttributeBegin
#to test gaussian, set numgaussian to the correct count
#to test beckman, set numgaussian to 0, remember to change the name of the output
Material "uber" "rgb Kd" [0 0 0] "rgb Ks" [1 1 1] "float roughness" [0.8] "bool remaproughness" "false" "integer numgaussian" [20] "float extfactor" [2.0]
Translate 0 1 0
Rotate 60 1 1 1
Scale .9 .9 .9
Shape "sphere"
AttributeEnd


WorldEnd

